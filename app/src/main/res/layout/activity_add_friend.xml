<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AddFriendActivity">


    <androidx.appcompat.widget.SearchView
        android:id="@+id/addFriendSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/lavander_stroke_panel"
        app:iconifiedByDefault="false"
        app:searchHintIcon="@null"
        app:queryHint="Поиск..."
        app:closeIcon="@android:drawable/ic_menu_delete"
        app:searchIcon="@android:drawable/ic_search_category_default"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/addFriendrecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_marginTop="80dp"/>

</RelativeLayout>