<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Зеленая обводка -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Фон прозрачный -->
            <stroke
                android:width="16dp"
                android:color="@android:color/holo_green_dark" /> <!-- Зеленая обводка -->
            <corners android:radius="8dp" /> <!-- Радиус углов, чтобы обводка была закругленной -->
        </shape>
    </item>
    <!-- Фоновый цвет CardView -->
    <item android:top="4dp" android:right="4dp" android:left="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/> <!-- Цвет фона для CardView -->
            <corners android:radius="8dp" /> <!-- Радиус углов -->
        </shape>
    </item>
</layer-list>